<div class="container-fluid">
	<div id="selectorsConverter">
		<div class="status {{if vsclient.isConnected 'connected'}}"></div>
		{{input id="source" value=inputValue type="text" placeholder="Type selector here..." key-up="onSourceSelectorChanged"}}
		<ul id="target">
			<li>
				<label>Scss: </label>
				{{targetScss}}
			</li>
			<li>
				<label>Css: </label>
				{{css-validator value=targetCss}}
			</li>
			<li>
				<label>XPath: </label>
				{{xpath-validator value=targetXPath}}
			</li>
		</ul>
	</div>

	<div class="row">
	  <div class="col-md-4">
	  	<div class="list-group">
			{{#each pages as |page|}}
				<a href="#" {{action "selectPage" page}} class="list-group-item">{{page.id}}</a>
	    	{{/each}}
		</div>
	  </div>
	  <div class="col-md-8">
	  	<div id="pageTree">
		    {{ember-jstree
		        data=data
		        plugins=plugins
		        themes=themes
				eventDidSelectNode="onComponentNodeSelected"
		        typesOptions=typesOptions
		    }}
		</div>
	  </div>
	</div>
</div>
