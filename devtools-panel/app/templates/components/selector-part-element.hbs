<div class=""
	{{action "onInspectElement" partElement allowedKeys="ctrl"}}
	{{action "onElementMouseEnter" partElement on="mouseEnter"}}
	{{action "onMouseLeave" on="mouseLeave"}}>
	<div class="element-index">
		{{~partElement.elementIndex~}}.
	</div>
	<span class="tag">&lt;{{selectable-value class="tag-name" value=partElement.tagName unlocked=partElement.isSelected}}
		{{~#if partElement.id~}}
			<span class="attribute"><span class="name"> id</span>="
				{{~selectable-value value=partElement.id unlocked=partElement.isSelected ~}}
			"</span>
		{{~/if~}}
		{{~#if partElement.classNames.length~}}
			<span class="attribute class-names"><span class="name"> class</span>="
				{{~#each partElement.classNames as |className|~}}
					{{~selectable-value value=className unlocked=partElement.isSelected ~}}
				{{~/each~}}
			"</span>
		{{~/if~}}
		{{~#each partElement.attributes as |attribute|~}}
			<span class="attribute"><span class="name"> {{attribute.name}}</span>="
				{{~selectable-value value=attribute unlocked=partElement.isSelected ~}}
			"</span>
		{{~/each~}}
		&gt;
	</span>
	{{#if partElement.innerText}}
		<span class="text">
			{{~selectable-value value=partElement.innerText unlocked=partElement.isSelected ~}}
		</span>
	{{/if}}
</div>
