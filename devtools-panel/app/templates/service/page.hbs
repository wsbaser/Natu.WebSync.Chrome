{{#if model}}
    <input id="expandAllTreeNodes" type="button" {{action "onExpandAllTreeNodes"}} value="Expand All"/>
    <input id="collapseAllTreeNodes" type="button" {{action "onCollapseAllTreeNodes"}} value="Collapse All"/>
    <input id="revalidateTreeSelectors" type="button" {{action "onRevalidateTreeSelector"}} value="Revalidate Selectors"/>
    <label class="checkbox" style="display: inline-block; margin-left: 20px;">
        {{#if highlightAll}}
            <input id="highlightAllComponents" type="checkbox" checked {{action "onHighlightAllComponents"}}/>
        {{else}}
            <input id="highlightAllComponents" type="checkbox" {{action "onHighlightAllComponents"}}/>
        {{/if}}
        <span>Highlight All Components</span>
    </label>
    <div id="pageTree">
        {{ember-jstree
            actionReceiver=jstreeActionReceiver
            data=data
            plugins=plugins
            themes=themes
            eventDidSelectNode="onComponentNodeSelected"
            eventDidHoverNode="onComponentNodeHovered"
            eventDidDehoverNode="onComponentNodeDehovered"
            typesOptions=typesOptions
            stateOptions=stateOptions
            skipLoading=skipLoading
        }}
    </div>
{{/if}}