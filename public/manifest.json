{
  "manifest_version": 2,
  "author": "wsbaser",
  "name": "Natu WebSync",
  "version": "0.0.14",
  "description": "Browser extension to synchronize web page in Chrome and it's Page Object in Visual Studio.",
  "content_security_policy": "script-src 'self' ; object-src 'self'",
  "icons": {
    "64": "icons/icon64.png"
  }, 
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [{
    "all_frames": false,
    "js": ["assets/content.js"],
    "matches": [ "<all_urls>" ],
    "run_at": "document_end"
  }],
  "web_accessible_resources": [
    "assets/32px.png",
    "assets/throbber.gif"
  ],
  "devtools_page": "./devtools.html",
  "permissions": [ "tabs", "<all_urls>" ]
}